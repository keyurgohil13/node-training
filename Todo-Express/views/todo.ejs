<section style="padding: 30px 0px;">

    <% if(isEdit){ %>
        <form method="post" action="/edit">
            <input type="hidden" name="id" value="<%= singleTodo.id %>" />
            <input type="text" name="editTodo" id="editTodo" value="<%= singleTodo.task %>"/>
            <input type="submit" value="Save" />
        </form>

            <% } else { %>
        <form method="post" action="/add">
            <input type="text" name="todo" id="todo" />
            <input type="submit" value="Add" />
        </form>


                <% } %>

    <ul>
        <% todos.map((todo)=> { %>

            <li>
               
                <span>
                    <%= todo.task %>
                </span>
                <span>
                    <a href="/edit/<%= todo.id%>  ">
                        Edit
                    </a>
                    ||
                    <a href="/delete/<%= todo.id%>">
                        Delete
                    </a>
                </span>
            </li>


            <% }) %>
    </ul>
</section>